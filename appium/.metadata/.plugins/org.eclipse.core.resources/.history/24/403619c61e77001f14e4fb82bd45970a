package tests;

import java.net.MalformedURLException;
//import org.openqa.selenium.remote.DesiredCapabilities;
//import java.net.*;
import java.net.*;

//import com.google.common.collect.ImmutableMap;

//import io.appium.java_client.MobileElement;
import io.appium.java_client.android.AndroidDriver;
import io.appium.java_client.android.options.UiAutomator2Options;
//import io.appium.java_client.remote.MobileCapabilityType;
//import io.appium.java_client.remote.MobilePlatform;

public class Baseclass{
	public static void main(String[] args) throws MalformedURLException {
		try {
            UiAutomator2Options options = new UiAutomator2Options()
                    .setDeviceName("emulator-5554")  // Set your device/emulator name
                    .setPlatformName("Android")      // Set platform name
                    .setApp("path/to/your/app.apk");  // Set your app path

            // URL of the Appium server
            URL serverUrl = new URL("http://localhost:4725/");

            // Initialize AndroidDriver with server URL and options
            AndroidDriver driver = new AndroidDriver(serverUrl, options);

            // Your test logic here

            driver.quit(); // Quit driver at the end of the test
        } catch (Exception e) {
            e.printStackTrace();
        }
	}
}
